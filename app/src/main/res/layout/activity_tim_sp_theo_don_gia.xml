<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TimSpTheoDonGiaActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập đơn giá MIN:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edtDonGiaMin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập đơn giá MAX:"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edtDonGiaMax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btnXemSpTheoDonGia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xem Sản phẩm theo đơn giá" />

    <ListView
        android:id="@+id/lvSanPham3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>